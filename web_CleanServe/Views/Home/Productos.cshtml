@{
    ViewBag.Title = "Productos";
}

@section Styles {
    <link href="~/Content/Productos.css" rel="stylesheet" type="text/css" />
}


<section>
    <div class="text-center container py-5">
        <h4 class="mt-4 mb-5"><strong>Catálogo</strong></h4>
        <div class="row">
            @foreach (var producto in ViewBag.Productos)
            {
                <div class="col-lg-4 col-md-12 mb-4">
                    <div class="card h-100">
                        <img src="@producto.imagen" class="custom-img card-img-top" />
                        <div class="card-body">
                            <a href="@Url.Action("DetalleProducto", new { id = producto.ID_producto })" class="text-reset">
                                <h5 class="card-title mb-3">@producto.nombre</h5>
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>
