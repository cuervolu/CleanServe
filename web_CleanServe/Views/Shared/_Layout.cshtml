<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title - CleanServe</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&display=swap" rel="stylesheet">

    <!-- Favicon -->
    <link rel="icon" href="~/Images/favicon.ico" type="image/x-icon">
    <link rel="apple-touch-icon" sizes="180x180" href="~/Images/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="~/Images/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="~/Images/favicon-16x16.png">
    <link rel="manifest" href="~/Images/site.webmanifest">

    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    @RenderSection("Styles", required: false)
    <link href="~/Content/fontawesome/css/fontawesome.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/fontawesome/css/solid.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/fontawesome/css/brands.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/owl.carousel.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/owl.theme.default.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/OwlCarousel/owl.transitions.css" rel="stylesheet" type="text/css" />
</head>
<body>
    <!--Navbar-->
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-brand">
            <div class="container-fluid">
                <a class="navbar-brand" href="/">
                    <img src="/Images/brand.svg" alt="CleanServ"
                         style="max-width: 210px; height: auto;">
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav">
                        <li class="nav-item @(ViewContext.RouteData.Values["Action"].ToString() == "Index" ? "active" : "")">
                            <a class="nav-link  @(Request.Url.AbsolutePath == "/" ? "active" : "")" aria-current="page" href="/">Inicio</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(Request.Url.AbsolutePath == "/Home/Productos" ? "active" : "")" href="@Url.Action("Productos")">Productos</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(Request.Url.AbsolutePath == "/Home/Servicios" ? "active" : "")" href="@Url.Action("Servicios")">Servicios</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <main class="container-fluid body-content px-0">
        @RenderBody()
    </main>

    <script src="~/Scripts/jquery-3.7.0.min.js"></script>
    <script src="~/Scripts/owl.carousel.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>